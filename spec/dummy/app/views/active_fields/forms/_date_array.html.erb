<%= form_with(model: active_field, scope: :active_field, url: active_field.persisted? ? active_field_path(active_field) : active_fields_path) do |f| %>
  <%= render partial: "shared/form_errors", locals: { record: active_field } %>

  <% if active_field.new_record? %>
    <%= f.hidden_field :type, { name: "type", value: active_field.type_name } %>
  <% end %>

  <% if active_field.new_record? %>
    <div class="form-input">
      <%= f.label :customizable_type %>
      <%= f.select :customizable_type, %w[Author Post] %>
    </div>
  <% end %>

  <div class="form-input">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% if active_field.new_record? %>
    <div class="form-input">
      <%= f.label :min_size %>
      <%= f.number_field :min_size %>
    </div>
  <% end %>

  <% if active_field.new_record? %>
    <div class="form-input">
      <%= f.label :max_size %>
      <%= f.number_field :max_size %>
    </div>
  <% end %>

  <% if active_field.new_record? %>
    <div class="form-input">
      <%= f.label :min %>
      <%= f.date_field :min %>
    </div>
  <% end %>

  <% if active_field.new_record? %>
    <div class="form-input">
      <%= f.label :max %>
      <%= f.date_field :max %>
    </div>
  <% end %>

  <%=
    render_array_input(
      form: f,
      name: :default_value,
      value: active_field.default_value,
      field_method: :date_field,
    )
  %>

  <div class="form-input">
    <%= f.submit %>
  </div>
<% end %>
