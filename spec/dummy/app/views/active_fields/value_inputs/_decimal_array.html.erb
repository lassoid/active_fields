<%= form.hidden_field :name, value: active_value.active_field.name %>

<%=
  render_array_input(
    form: form,
    name: :value,
    value: active_value.value,
    label_text: active_field.name,
    field_method: :number_field,
    field_opts: { min: active_field.min, max: active_field.max, step: "any" },
  )
%>
