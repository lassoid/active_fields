<%= form_with(model: author) do |f| %>
  <%= render partial: "shared/form_errors", locals: { record: author } %>

  <div class="form-input">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-input">
    <%= f.label :group_id %>
    <%= f.collection_select :group_id, Group.order(:id), :id, :name, prompt: true %>
  </div>

  <%= f.fields_for :active_values_attributes do |active_fields_form| %>
    <% author.active_fields.each do |active_field| %>
      <%= render_active_field_input(form: active_fields_form, record: author, active_field: active_field) %>
    <% end %>
  <% end %>

  <div class="form-input">
    <%= f.submit %>
  </div>
<% end %>
