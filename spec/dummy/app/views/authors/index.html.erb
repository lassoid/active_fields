<h1>Authors</h1>

<div class="links">
  <%= link_to "New", new_author_path %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Group</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= link_to "##{author.id}", edit_author_path(author) %></td>
        <td><%= author.name %></td>
        <td><%= author.group&.name %></td>
        <td><%= button_to "Destroy", author_path(author), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="links">
  <%= link_to "Back", root_path %>
</div>
